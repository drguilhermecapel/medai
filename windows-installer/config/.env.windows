# SPEI Windows Configuration
# This file is automatically configured during installation

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
APP_NAME=SPEI
APP_VERSION=1.0.0
ENVIRONMENT=production
DEBUG=false

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql+asyncpg://postgres:{{DB_PASSWORD}}@localhost:{{DB_PORT}}/spei
POSTGRES_USER=postgres
POSTGRES_PASSWORD={{DB_PASSWORD}}
POSTGRES_DB=spei
DB_HOST=localhost
DB_PORT={{DB_PORT}}
DB_NAME=spei
DB_USER=postgres
DB_PASSWORD={{DB_PASSWORD}}

# Database connection pool settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
SECRET_KEY={{GENERATED_SECRET_KEY}}
JWT_SECRET_KEY={{GENERATED_JWT_SECRET}}
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Password hashing
PASSWORD_HASH_ALGORITHM=bcrypt
PASSWORD_HASH_ROUNDS=12

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_ENABLED=false

# =============================================================================
# CELERY CONFIGURATION
# =============================================================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# =============================================================================
# APPLICATION PORTS
# =============================================================================
API_PORT={{API_PORT}}
WEB_PORT={{WEB_PORT}}
FRONTEND_PORT={{WEB_PORT}}

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
ALLOWED_ORIGINS=http://localhost:{{WEB_PORT}},http://127.0.0.1:{{WEB_PORT}}
CORS_ORIGINS=http://localhost:{{WEB_PORT}},http://127.0.0.1:{{WEB_PORT}}
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
MAX_UPLOAD_SIZE=50MB
UPLOAD_PATH=C:\ProgramData\SPEI\uploads
ALLOWED_EXTENSIONS=pdf,jpg,jpeg,png,doc,docx,txt

# Medical image storage
MEDICAL_IMAGES_PATH=C:\ProgramData\SPEI\medical_images
DICOM_STORAGE_PATH=C:\ProgramData\SPEI\dicom

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_PATH=C:\ProgramData\SPEI\logs
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# Medical audit logging
AUDIT_LOG_ENABLED=true
AUDIT_LOG_PATH=C:\ProgramData\SPEI\logs\audit
AUDIT_LOG_RETENTION_DAYS=2555

# =============================================================================
# MEDICAL COMPLIANCE CONFIGURATION
# =============================================================================
MEDICAL_COMPLIANCE_MODE=true
AUDIT_LOGGING=true
DATA_RETENTION_DAYS=2555
HIPAA_COMPLIANCE=true
LGPD_COMPLIANCE=true

# Medical data encryption
MEDICAL_DATA_ENCRYPTION=true
ENCRYPTION_ALGORITHM=AES-256-GCM

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
REACT_APP_API_URL=http://localhost:{{API_PORT}}
REACT_APP_WS_URL=ws://localhost:{{API_PORT}}

# =============================================================================
# WINDOWS SPECIFIC CONFIGURATION
# =============================================================================
WINDOWS_SERVICE_MODE=true
DATA_PATH=C:\ProgramData\SPEI\data
BACKUP_PATH=C:\ProgramData\SPEI\backups
TEMP_PATH=C:\ProgramData\SPEI\temp

# Windows paths for runtime components
PYTHON_PATH=C:\Program Files\SPEI\runtime\python
NODEJS_PATH=C:\Program Files\SPEI\runtime\nodejs
POSTGRESQL_PATH=C:\Program Files\SPEI\runtime\postgresql
REDIS_PATH=C:\Program Files\SPEI\runtime\redis

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@domain.com
SMTP_PASSWORD=your_email_password
SMTP_TLS=true
SMTP_SSL=false

# =============================================================================
# AI/ML CONFIGURATION
# =============================================================================
AI_MODELS_PATH=C:\Program Files\SPEI\models
AI_ENABLED=true
AI_INFERENCE_TIMEOUT=30
AI_MODEL_CACHE_SIZE=1GB

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=daily
BACKUP_RETENTION_DAYS=90
BACKUP_COMPRESSION=true

# =============================================================================
# MONITORING AND HEALTH CHECKS
# =============================================================================
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=60
METRICS_ENABLED=true
PERFORMANCE_MONITORING=true

# =============================================================================
# SESSION CONFIGURATION
# =============================================================================
SESSION_TIMEOUT=3600
SESSION_SECURE=true
SESSION_HTTPONLY=true
SESSION_SAMESITE=strict

# =============================================================================
# ADMIN USER CONFIGURATION (set during installation)
# =============================================================================
INITIAL_ADMIN_EMAIL={{ADMIN_EMAIL}}
INITIAL_ADMIN_PASSWORD={{ADMIN_PASSWORD}}
ADMIN_NAME={{ADMIN_NAME}}
ADMIN_EMAIL={{ADMIN_EMAIL}}
ADMIN_PASSWORD={{ADMIN_PASSWORD}}

# =============================================================================
# FEATURE FLAGS
# =============================================================================
FEATURE_AI_DIAGNOSTICS=true
FEATURE_TELEMEDICINE=true
FEATURE_MOBILE_APP=true
FEATURE_VOICE_RECOGNITION=false
FEATURE_BLOCKCHAIN_AUDIT=false

# =============================================================================
# INTEGRATION CONFIGURATION
# =============================================================================
HL7_ENABLED=false
FHIR_ENABLED=false
DICOM_ENABLED=true

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
WORKER_PROCESSES=4
WORKER_CONNECTIONS=1000
KEEPALIVE_TIMEOUT=65
CLIENT_MAX_BODY_SIZE=50M

# =============================================================================
# DEVELOPMENT/DEBUG (Production should be false)
# =============================================================================
RELOAD_ON_CHANGE=false
SHOW_SQL_QUERIES=false
ENABLE_PROFILER=false
