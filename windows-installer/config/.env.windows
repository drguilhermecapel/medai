# SPEI Windows Configuration
# This file is automatically configured during installation

# Environment
ENVIRONMENT=production
DEBUG=false

# Database Configuration
DATABASE_URL=postgresql+asyncpg://spei:{{DB_PASSWORD}}@localhost:5432/spei_db
POSTGRES_USER=spei
POSTGRES_PASSWORD={{DB_PASSWORD}}
POSTGRES_DB=spei_db

# Security Configuration
SECRET_KEY={{GENERATED_SECRET_KEY}}
JWT_SECRET_KEY={{GENERATED_JWT_SECRET}}
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Application Ports
API_PORT={{API_PORT}}
WEB_PORT={{WEB_PORT}}

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:{{WEB_PORT}},http://127.0.0.1:{{WEB_PORT}}

# File Upload Configuration
MAX_UPLOAD_SIZE=50MB
UPLOAD_PATH=C:\ProgramData\SPEI\uploads

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_PATH=C:\ProgramData\SPEI\logs

# Medical Compliance Configuration
MEDICAL_COMPLIANCE_MODE=true
AUDIT_LOGGING=true
DATA_RETENTION_DAYS=2555

# Frontend Configuration
REACT_APP_API_URL=http://localhost:{{API_PORT}}
REACT_APP_WS_URL=ws://localhost:{{API_PORT}}

# Windows Specific Configuration
WINDOWS_SERVICE_MODE=true
DATA_PATH=C:\ProgramData\SPEI\data
BACKUP_PATH=C:\ProgramData\SPEI\backups

# Admin User Configuration (set during installation)
INITIAL_ADMIN_EMAIL={{ADMIN_EMAIL}}
INITIAL_ADMIN_PASSWORD={{ADMIN_PASSWORD}}
